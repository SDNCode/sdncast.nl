@page "/admin"
@*@attribute [Authorize]*@
@inherits AdminComponentBase

<Layout Title="Admin">
    <PageBody>
        <div class="admin-screen">
            <h2>SDN Cast Admin - @AdminModel.EnvironmentName</h2>

            <EditForm Model="@AdminModel" OnSubmit="@HandleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <h4>Live Show Details</h4>

                <hr />
                @if (ShowSuccessMessage)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @SuccessMessage
                    </div>
                }

                <div class="form-group row">
                    <label for="AdminMessage" class="col-md-3 col-form-label font-weight-bold">Admin message:</label>
                    <div class="col-md-5">
                        <InputText class="form-control" id="AdminMessage" @bind-Value="@AdminModel.AdminMessage" />
                        <ValidationMessage For="()=>AdminModel.AdminMessage" />

                    </div>
                </div>

                <div class="form-group row">
                    <label for="LiveShowEmbedUrl" class="col-md-3 col-form-label font-weight-bold">Live show embed URL</label>
                    <div class="col-md-5">
                        <InputText class="form-control" id="LiveShowEmbedUrl" @bind-Value="@AdminModel.LiveShowEmbedUrl" />
                        <ValidationMessage For="()=>AdminModel.LiveShowEmbedUrl" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="LiveShowHtml" class="col-md-3 col-form-label font-weight-bold">Live show HTML</label>
                    <div class="col-md-5">
                        <InputTextArea class="form-control html-input" id="LiveShowHtml" @bind-Value="@AdminModel.LiveShowHtml" />
                        <ValidationMessage For="()=>AdminModel.LiveShowHtml" />
                    </div>
                </div>

                <div class="form-group row" id="nextShowDate">
                    <label for="NextShowDateCET" class="col-md-3 col-form-label font-weight-bold">Next show date</label>
                    <div class="col-md-5">
                        <InputText class="form-control html-input" id="NextShowDateCET" @bind-Value="@AdminModel.NextShowDateCETString" />
                        <ValidationMessage For="()=>AdminModel.NextShowDateCETString" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="offset-md-3 col-md-9">
                        <button type="button" class="btn btn-primary" @onclick="OnSelectNextThursday">Select Next Thursday</button>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="offset-md-3 col-md-9">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>

            </EditForm>
        </div>
    </PageBody>
</Layout>