<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData">
            <NotAuthorized>
                <Layout Title="Secured area">
                    <PageBody>
                        Sorry, this page requires authorization
                    </PageBody>
                </Layout>
            </NotAuthorized>
        </AuthorizeRouteView>

    </Found>
    <NotFound>
        <CascadingAuthenticationState>
            <Layout Title="Oops">
                <PageBody>
                    Sorry, there's nothing at this address.
                </PageBody>
            </Layout>
        </CascadingAuthenticationState>
    </NotFound>
</Router>