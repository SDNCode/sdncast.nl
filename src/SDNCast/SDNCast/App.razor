<CascadingAuthenticationState>
    <Router AppAssembly="typeof(Startup).Assembly">

        <NotFoundContent>
            <Layout Title="Oops">
                <PageBody>
                    Sorry, there's nothing at this address.
                </PageBody>
            </Layout>
        </NotFoundContent>
        <NotAuthorizedContent>
            <Layout Title="Secured area">
                <PageBody>
                    Sorry, this page requires authorization
                </PageBody>
            </Layout>
        </NotAuthorizedContent>
    </Router>
</CascadingAuthenticationState>

