@using sdncast.nl.Models
@model Show

<div class="col-sm-6 col-md-4">
    <div class="img-thumbnail youtube-show bottom-buffer mx-auto">
        <a href="@Model.Url" title="Watch this episode">
            <div>
                <img class="img-fluid mx-auto" src="@Model.ThumbnailUrl" alt="Thumbnail of episode" />
            </div>
        </a>
        <div class="caption text-center">
            <h4>
                <a href="@Model.Url" title="Watch this episode">
                    @if (Model.HasTitle)
                    {
                        @Model.Title<br />
                    }
                </a>
                @if (string.Equals(Model.LiveBroadcastContent, "upcoming"))
                {
                    <span class="badge badge-warning">UPCOMING</span>
                }
                else
                {
                    <span class="show-date">@Model.ShowDate.DateTime.ToString("dd MMM, yyyy")</span>
                    @if (Model.IsNew)
                    {
                        <span class="badge badge-success badge-new-show">New</span>
                    }
                }
            </h4>
        </div>
    </div>
</div>
